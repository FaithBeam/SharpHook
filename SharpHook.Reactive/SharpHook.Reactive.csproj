<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netcoreapp3.1;net5.0;net461</TargetFrameworks>
    <Platforms>x86;x64;ARM32;ARM64;AnyCPU</Platforms>
    <RuntimeIdentifiers>win-x86;win-x64;win-arm;osx-x64;osx-arm64;linux-x64;linux-arm;linux-arm64</RuntimeIdentifiers>
    <LangVersion>latest</LangVersion>
    <Nullable>enable</Nullable>
    <Version>1.0.0-preview.1</Version>
    <Authors>Tolik Pylypchuk</Authors>
    <Company>Tolik Pylypchuk</Company>
    <Product>SharpHook</Product>
    <Description>A library which provides a cross-platform global keyboard and mouse hook for .NET</Description>
    <Copyright>(c) 2021 Anatoliy Pylypchuk</Copyright>
    <PackageProjectUrl>https://github.com/TolikPylypchuk/SharpHook</PackageProjectUrl>
    <RepositoryUrl>https://github.com/TolikPylypchuk/SharpHook</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>hook global-hook libuiohook rx reactive</PackageTags>
    <PackageIcon>icon.png</PackageIcon>
    <PackageIconUrl />
  </PropertyGroup>

  <PropertyGroup>
    <DocumentationFile>$(ProjectDir)SharpHook.Reactive.xml</DocumentationFile>
  </PropertyGroup>

  <PropertyGroup>
    <NoWarn>$(NoWarn);1591</NoWarn>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="System.Reactive" Version="5.0.0" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\SharpHook\SharpHook.csproj" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\icon.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

</Project>
